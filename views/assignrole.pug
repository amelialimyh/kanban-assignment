html
  head 
    title="Assign Role"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" rel="stylesheet")
    style 
      include ../static/style.css

  body 
    div(class="container")
      a#header(href="/" class="pb-2")="Task Management"
      h4(class="p-2")="Assign Role"
      div(class="card")
        div(class="card-body")
          form#form-1(action="/auth/assignrole" method="POST")
              div(class="form-group")
                input(type="text" class="form-control w-50 mb-3" name="username" placeholder=displayuname)
              
                button#checkUser-btn(type="submit" form="form-1" class="btn btn-primary mr-3 mb-3")="Check User"
              if uname
                div(class="form-group")
                  h5 Current Roles
                  render #{currentrole} 
          if uname
            form(action="/auth/assignrole" method="POST")
                input(type="hidden",value=uname name='hiddenuname')
                div(class="form-group")
                  h5(class="mt-3") Assign Role
                  select(class="mdb-select md-form mb-3 w-50" name="addrole")
                    option(value="" disabled selected)="Choose Role"
                    for role in role_array
                      option(value=role)=role
                
                div(class="form-group")
                  h5(class="mt-3") Remove Role
                  select(class="mdb-select md-form mb-3 w-50" name="deleterole")
                    option(value="" disabled selected)="Choose Role"
                    for role in role_array
                      option(value=role)=role


                button(type="submit" class="btn btn-primary")="Confirm"
      if message
        h4(class="alert alert-danger mt-4")=message 

  script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous") 