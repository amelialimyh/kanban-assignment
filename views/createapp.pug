html
  head 
    title="Create App"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" rel="stylesheet")
    style 
      include ../static/style.css

  body 
    include ./navbar.pug

    div(class="container")
      h4(class="p-2")="Create Application"
      div(class="card")
        div(class="card-body")
          form(action="/auth/createapp" method="POST")
            if message
                h4(class="alert alert-danger mt-4")=message 
                
            div(class="form-group")
                input(type="text" class="form-control w-50" name="app_acronym" placeholder="App Acronym")
            
            div(class="form-group")
                h5 Description
                textarea(name="description", cols="57", rows="4") 
            
            div(class="form-group")
                h5 Start Date
                input(type="date" name="startDate" placeholder="Date") 
            
            div(class="form-group")
                h5 End Date
                input(type="date" name="endDate")
            
            div(class="form-group")
                h5(class="mt-3") Permit Create
                select(class="mdb-select md-form w-50" name="permit_create")
                    option(value="" disabled selected)="Choose Role"
                    if roles 
                        for role in roles
                            option(value=role)=role

            div(class="form-group")
                h5(class="mt-3") Permit Open
                select(class="mdb-select md-form w-50" name="permit_open")
                    option(value="" disabled selected)="Choose Role"
                    if roles 
                        for role in roles
                            option(value=role)=role
            
            div(class="form-group")
                h5(class="mt-3") Permit To-Do List
                select(class="mdb-select md-form w-50" name="permit_todolist")
                    option(value="" disabled selected)="Choose Role"
                    if roles
                        for role in roles
                            option(value=role)=role
            
            div(class="form-group")
                h5(class="mt-3") Permit Doing 
                select(class="mdb-select md-form w-50" name="permit_doing")
                    option(value="" disabled selected)="Choose Role"
                    if roles
                        for role in roles
                            option(value=role)=role
            
            div(class="form-group")
                h5(class="mt-3") Permit Done 
                select(class="mdb-select md-form w-50" name="permit_done")
                    option(value="" disabled selected)="Choose Role"
                    if roles      
                        for role in roles
                            option(value=role)=role
            
            div(class="form-group")
                h5(class="mt-3") Permit Close 
                select(class="mdb-select md-form w-50" name="permit_close")
                    option(value="" disabled selected)="Choose Role"
                    if roles      
                        for role in roles
                            option(value=role)=role

            button(type="submit" class="btn btn-primary")="Submit"

  script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous") 