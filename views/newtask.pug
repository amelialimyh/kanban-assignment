html
  head 
    title="Create Task"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" rel="stylesheet")
    style 
      include ../static/style.css

  body 
    include ./navbar.pug

    div(class="container")
      h4(class="p-2")="Create task"
      div(class="card")
        div(class="card-body")
          form#form-1(action="/api/newtask" method="POST")
            div(class="form-group")
              h5(class="mt-3") Task App_Acronym
              //--------------------- Select Input --------------------------------
              select(class="mdb-select md-form mb-3 w-50" name="task_app_acronym")
                option(value="" disabled selected)="Choose Task App_Acronym"
                //- displays chosen task_app_acronym
                if selected_task 
                  for task in selected_task
                    option(value=task.app_acronym selected)=task.app_acronym
                //-  else show the available task_app_acronym
                else 
                  if task_array 
                    for task in task_array 
                      option(value=task.app_acronym)=task.app_acronym
              //----------------------------------------------------------------
              if task_array 
                div(class="row")
                  button(type="submit" name="app_acronym_btn" value="true" class="btn btn-primary ml-3")="Select App_acronym"

            if selected_task
              form#form-2(action="/auth/createtask" method="POST")  
                div(class="form-group")
                  input(type="text" class="form-control w-50" name="name" placeholder="Task Name")
                
                div(class="form-group")          
                  p Description:
                  textarea#createtask-comment(name="description", cols="57", rows="4") 
                
                div(class="form-group")
                  p Notes:
                  textarea(name="notes", cols="57", rows="4") 
                
                button(type="submit" name="submit_btn" value="true" class="btn btn-primary")="Submit"
                
                a(href="/" class="ml-4")="Cancel"

        if message
          h4(class="alert alert-danger mt-4")=message 

  script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous") 