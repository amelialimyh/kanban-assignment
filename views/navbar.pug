html
  head 
    title="Task Management"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" rel="stylesheet")
    style 
      include ../static/style.css

  body 
    nav 
      div#navbar_container(class="container")
        a#header(href="/" class="float-left")="Task Management"
        div(class="row float-right mt-3")
          if isLoggedIn 
            ul
              li   
                    a#navbar-content(href="/kanban") 
                      button(href="#" class="user-management-btn")="Kanban Board"
              li
             
                  button(href="#" class="user-management-btn")="Application"
                  ul
                    li
                      a#navbar-content(href="/applications" class="m-2")="All Applications"
                    li
                      a#navbar-content(href="/createapp" class="m-2")="Create Application"
                    li
                      a#navbar-content(href="/editapp" class="m-2")="Edit Application"
              li 
                button(href="#" class="user-management-btn")="Task"
                ul
                  li
                    a#navbar-content(href="/tasklist" class="m-2")="Task List"
                  li
                    a#navbar-content(href="/createtask" class="m-2")="Create Task"
                  li
                    a#navbar-content(href="/updatetask" class="m-2")="Update Task"
              li 
                button(href="#" class="user-management-btn")="User Management"
                ul 
                  li 
                    a#navbar-content(href="/assignrole" class="m-2")="Assign Role"
                  li 
                    a#navbar-content(href="/register" class="m-2")="Register Account"
                  li 
                    a#navbar-content(href="/updateuser" class="m-2")="Update User"
              li
                a#logout-link(href="/logout")="Logout"
          else
            small 
              a#login-link(href="/login" class="float-right mt-3")="Login" 
        
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous") 