html
  head 
    title="Task Management"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" rel="stylesheet")
    style 
      include ../static/style.css

  body 
    nav 
      div(class="container")
        a#header(href="/" class="pb-2")="Task Management"
        if isLoggedIn
          small 
            a#logout-link(href="/logout" class="float-right mt-3")="Logout"
            a#reset-password-link(href="/resetpassword" class="float-right mt-3 mr-3")="Reset Password"
            a#change-email-link(href="/updateemail" class="float-right m-3")="Change Email"
            a#register-link(href="/register" class="float-right mt-3")="Register Account"
        else
          small 
            a#login-link(href="/login" class="float-right mt-3")="Login" 
        
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")

